<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/listaAnotacoes_posicao"
		android:text="1. "
		android:padding="3dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<TextView
		android:id="@+id/listaAnotacoes_dataHora"
		android:text="08/03/2011 12:15:52"
		android:padding="3dip"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_weight="1" />
	<TextView
		android:id="@+id/listaAnotacoes_linha"
		android:text="Linha 9"
		android:gravity="left"
		android:padding="5dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<TextView
		android:id="@+id/listaAnotacoes_estacao"
		android:text="VOL"
		android:gravity="right"
		android:padding="5dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<TextView
		android:id="@+id/listaAnotacoes_sentido"
		android:text="OSA"
		android:gravity="right"
		android:padding="3dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
		
</TableRow>	